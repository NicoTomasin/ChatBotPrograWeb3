<form action="/Usuario/Login" method="post">

    <div class="form-group">
        <label for="NombreUsuario">Nombre de Usuario</label>
        <input type="text" class="form-control" id="NombreUsuario" name="NombreUsuario" placeholder="Nombre Usuario">
    </div>

    <div class="form-group">
        <label for="Contrasenia">Contraseña</label>
        <input type="password" class="form-control" id="Contrasenia" name="Contrasenia" placeholder="Ingrese su Contraseña">
    </div>


    <button type="submit" class="btn btn-primary">Ingresar</button>

</form>

